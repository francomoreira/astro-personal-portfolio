---
import data from '../data.json';
import IconosSocialmedia from './iconosSocialmedia.astro';

const fechaActual = new Date();
const year = fechaActual.getFullYear();
---

<footer>
    <div class='links-footer'>
        <p><a href={data.email}>Contacto</a></p>
        <p>Proyectos</p>
        <p><a href="/">Home</a></p>
        <p><a href="../pages/about.astro">About</a></p>
    </div>
    <IconosSocialmedia />
    <p class="copyright-text">
        {data.nombre} ©️ {year} - All rights reserved. 
    </p>
</footer>


<style>
footer {
display: flex;
align-items: center;
height: 300px;
flex-direction: column;
background-color: #22272e;
box-shadow: 0px -1px 5px var(--shadow-box);
padding-top: 1%;
padding-bottom: 1%;
}
    a {
        text-decoration: none;
        color: var(--headline);
    }
    .copyright-text{
        font-size: 0.75em;
    }
</style>