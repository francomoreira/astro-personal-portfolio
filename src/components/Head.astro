---
const { title, description, pubDate, updatedDate, heroImage, type } = Astro.props;
---

<head>
    <link rel="sitemap" href="/sitemap-index.xml" /> 
    <link rel="shortcut icon" href="/favicon.webp" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;500;700&family=Roboto+Mono:wght@300;500;700&display=swap" rel="stylesheet"/>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- agregando los meta para facebook (Open Graph -->
    <meta property="og:title" content={title || 'Franco Moreira - Portfolio'}>
    <meta property="og:site_name" content="Franmore.ar">
    <meta property="og:url" content="https://franmore.ar/">
    <meta property="og:description" content={description || "Programador web Frontend - de San Juan, Argentina, con experiencia en desarrollo web y conocimiento en el sector agropecuario.  Agro Tech, SEO, CAD  y data science."}>
    <meta property="og:type" content={type || "website"}>
    <meta property="og:image" content={heroImage || "https://franmore.ar/franmore-dev-profile.jpg"}>

    <title>{title}</title>
    <style>
        :root {
            /* COLORES */
            --bg-color: #22272e;
            --headline: #f8f8f8;
            --p: #abd1c6;
            --button: #22272e;
            --button-hover: #16181d;
            --button-txt: #001e1d;
            --shadow-box: #16181D;
        }
        body {
            background: var(--bg-color);
            color: var(--headline);
            display: flex;
            flex-direction: column;
            font-family: "Quicksand", sans-serif;
            min-height: 100vh;
        }
        h2 {
            font-family: "Roboto Mono", monospace;
            margin-bottom: 4vh;
        }
        h3 {
            font-family: "Roboto Mono", monospace;
            
            margin-bottom: 2vh;
        }
        a {
            text-decoration: none;
            color: var(--headline);
        }
    </style>
        
</head>

