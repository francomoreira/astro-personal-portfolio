<MainLayout>
	<style>
		.container-links {
        display: flex;
        align-items: center;
        flex-direction: column;
    }
        .personal-projects-links {
            display: flex;
            align-items: center;
            flex-direction: column;
            padding-bottom: 1vh;
        }
            .boton-links {
                display: flex;
                justify-content: center;
                align-items: center;
                text-decoration: none;
                background-color: var(--button);
                color: var(--button-txt);
                text-decoration: none;
                padding: 15px;
                margin: 0.5vh;
                border-radius: 3vw;
                height: 1vh;
                font-size: var(--md);
                transition: 0.1s;
            }
            .boton-links:hover {
                background-color: var(--p);
                font-size: 3vh;
                height: 2vh;
                border-radius: 5vw;
            }
	</style>
